<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Pizza Planet - Menu</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/header.css" type="text/css" />
    <link rel="stylesheet" href="/styles/footer.css" type="text/css" />
    <link rel="stylesheet" href="/styles/menu.css" type="text/css" />
    <!-- FONTS -->
    <link href="https://fonts.googleapis.com/css2?family=Aclonica&family=Open+Sans:ital,wght@0,300;0,400;0,600;0,700;0,800;1,300;1,400;1,600;1,700;1,800&display=swap" rel="stylesheet">

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  </head>

  <body>

    <%- include('partials/_header') %>

    <h2>Order with us</h2>

    <main id="menu">
      <h3>PIZZAS</h3>
      <section class="pizza">
        <!-- APPEND PIZZA DISHES -->
        <% for (let item of menuItems) { %>
          <% if (!item.is_side_dish) { %>
            <article class="dish">
              <div>
                <img class="dish-image" src="<%= item.image_url %>">
              </div>
              <div class="dish-info">
                <h4><%= item.name %></h4>
                <p><%= item.description %></p>
                <form action="/cart" method="POST" id="add-pizza">
                  <label for="pizza-size">Size</label>
                  <select form="add-pizza" id="pizza-size">
                    <option value="s">Small</option>
                    <option value="m">Medium</option>
                    <option value="l">Large</option>
                  </select>
                  <label for="pizza-crust">Crust</label>
                  <select form="add-pizza" id="pizza-crust">
                    <option value="thin">Thin</option>
                    <option value="regular">Regular</option>
                  </select>
                  <btn class="add-to-cart" type="submit">ADD TO CART</btn>
                </form>
              </div>
            </article>
          <% } %>
        <% } %>
      </section>

      <h3>SIDES</h3>
      <section class="sides">
        <!-- APPEND SIDE DISHES -->
        <% for (let item of menuItems) { %>
          <% if (item.is_side_dish) { %>
            <article class="dish">
              <div>
                <img class="dish-image" src="<%= item.image_url %>">
              </div>
              <div class="dish-info">
                <h4><%= item.name %></h4>
                <p><%= item.description %></p>
                <form action="/cart" method="POST" id="add-side">
                  <btn class="add-to-cart" type="submit">ADD TO CART</btn>
                </form>
              </div>
            </article>
          <% } %>
        <% } %>
      </section>

      <a class="order-button" href="/cart">GO TO CART</a>
    </main>

    <%- include('partials/_footer') %>

    <!-- External JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

    <!-- App JS -->
    <script type="text/javascript" src="/scripts/client.js"></script>
    <script type="text/javascript" src="/scripts/login-logout.js"></script>
    <script type="text/javascript" src="/scripts/add-to-cart.js"></script>
  </body>
</html>
